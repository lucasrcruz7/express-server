model Admin {
  id    String @id @default(uuid())
  nome  String
  email String @unique
  senha String
}

model Aluno {
  id               String     @id @default(uuid())
  rm               Int        @unique
  nome             String
  email            String     @unique
  responsavelEmail String
  curso            String
  serie            String
  senha            String
  telefone         String
  turma            String
  ativo            Boolean    @default(true)
  presencas        Presenca[]

  @@index([rm])
}

model Professor{
   id       String     @id @default(uuid())
   nome     String
   email    String     @unique
   senha    String
}

model Presenca {
  id       String   @id @default(uuid())
  data     DateTime // agora obrigatório informar ao criar presença
  presente Boolean
  token    String   // token único do QRCode do aluno para o dia
  alunoId  String   
  aluno    Aluno    @relation(fields: [alunoId], references: [id])
  
  @@unique([alunoId, data]) // garante que só haverá uma presença por aluno/dia
}

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
